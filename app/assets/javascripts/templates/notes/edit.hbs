<form id="edit_note" action="/notes" method="post" role='form'>
  <fieldset>
    <legend>Edit Note</legend>
    <div class="form-group">
      <label for="title" class="control-label">Update Title</label>
      <input value="{{ title }}" type="text" name="title" id="title" class="form-control" placeholder="Note Name" />
    </div>
    <div class="form-group">
      <label for="content" class="control-label">Note Content</label>
      <textarea class="form-control" id="content" name="content" rows="5" cols="30" placeholder="Content">{{ content }}</textarea>
    </div>
    <br>
    <button class="btn btn-primary submit">Update</button>
    <button class="btn btn-default discard">Discard</button>
  </fieldset>
</form>
