<form id="new_category" action="/categories" method="post" role='form'>
  <fieldset>
    <legend>New Category</legend>
    <div class="form-group">
      <label for="name" class="control-label">Category Name</label>
      <input value="{{ name }}" type="text" name="name" id="name" class="form-control" />
    </div>
    <br>
    <button class="btn btn-primary">Update</button>
  </fieldset>
</form>
